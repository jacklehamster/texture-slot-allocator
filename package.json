{
  "name": "texture-slot-allocator",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },  
  "scripts": {
    "tsc": "tsc",
    "start": "bun run index.ts",
    "bundle": "rm -rf build/*.* && bun run bundler/bundler.ts && bun test",
    "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "list": "bun run samples/list-scripts.tsx",
    "example": "cd example && bun start && cd ..",
    "fileSample": "bun run samples/file.tsx && cat samples/data/test.json",
    "httpSample": "bun run samples/server.tsx"
  },
  "files": [
    "resources",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/mocha": "^10.0.3",
    "@types/react": "^18.2.21",
    "bun": "^1.0.7",
    "bun-types": "latest",
    "jest": "^29.7.0",
    "png-to-ico": "^2.1.8",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "avl": "^1.5.3"
  }
}
